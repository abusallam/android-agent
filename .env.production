# Security Configuration
CORS_ORIGIN=https://tac.consulting.sa
ALLOWED_ORIGINS=https://tac.consulting.sa,http://localhost:3020

# Supabase Cloud Configuration (Main Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Database Sync Configuration
ENABLE_SUPABASE_SYNC=true
SYNC_INTERVAL_SECONDS=300
SYNC_BATCH_SIZE=100

# WebSocket Configuration
WS_PORT=8080
WS_HOST=0.0.0.0

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/app/data/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/tacticalops.log

# Performance Configuration
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Feature Flags
ENABLE_LIVEKIT_STREAMING=true
ENABLE_TACTICAL_MAPPING=true
ENABLE_AI_FEATURES=true
ENABLE_WEBSOCKET_REALTIME=true
ENABLE_MOBILE_SYNC=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true