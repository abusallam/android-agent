    {
      "src": "/logo.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "permissions": [
    "geolocation",
    "notifications",
    "camera",
    "microphone",
    "background-sync",
    "persistent-storage",
