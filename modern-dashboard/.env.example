# üõ°Ô∏è Android Agent - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="file:./dev.db"
# For production: DATABASE_URL="postgresql://user:password@host:port/database"

# Authentication & Security
NEXTAUTH_SECRET="your-super-secure-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-signing-key-here"

# Application Environment
NODE_ENV="development"

# Real-time Communication
NEXT_PUBLIC_WS_URL="ws://localhost:3000"

# PWA Configuration
ENABLE_BACKGROUND_SYNC="true"
LOCATION_SYNC_INTERVAL="300000"
DEVICE_SYNC_INTERVAL="600000"

# Security Headers
SECURE_HEADERS="false"

# Intelligence Features
ENABLE_AI_FEATURES="true"
AI_ANALYSIS_INTERVAL="600000"

# LiveKit Configuration (for real-time streaming)
LIVEKIT_URL="wss://your-livekit-server.livekit.cloud"
LIVEKIT_API_KEY="your-livekit-api-key"
LIVEKIT_API_SECRET="your-livekit-api-secret"

# Optional: Redis for sessions and caching
# REDIS_URL="redis://localhost:6379"

# Optional: OpenAI for AI features
# OPENAI_API_KEY="your-openai-api-key"

# ngrok Configuration (for mobile testing)
# Update these when using ngrok tunnel
# NEXTAUTH_URL="https://your-ngrok-subdomain.ngrok.io"
# NEXT_PUBLIC_WS_URL="wss://your-ngrok-subdomain.ngrok.io"