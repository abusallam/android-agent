# TacticalOps Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database: Supabase Cloud PostgreSQL
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Backup Database: PostgreSQL Container
POSTGRES_DB=tacticalops
POSTGRES_USER=tacticalops
POSTGRES_PASSWORD=your-secure-postgres-password

# Cache & Sessions: Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_MAX_MEMORY=256mb
REDIS_POLICY=allkeys-lru

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Build Configuration
BUILD_VERSION=2.0.0
NODE_ENV=production

# API Configuration
API_VERSION=v2
DEPLOYMENT_TIER=civilian
FEATURES_ENABLED=basic,mapping,emergency,communication,geospatial,storage

# Agent Configuration
AGENT_API_KEY=your-agent-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=info

# Contact Configuration
NEXT_PUBLIC_CONTACT_EMAIL=admin@tac.consulting.sa

# =============================================================================
# MOBILE APPLICATION CONFIGURATION
# =============================================================================

# Expo/React Native Configuration
EXPO_PUBLIC_API_URL=https://tac.consulting.sa
EXPO_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# DEVELOPMENT OVERRIDES (Optional)
# =============================================================================

# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# DEPLOYMENT_TIER=development